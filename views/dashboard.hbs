{{> menu id="dashboard"}}

<section class="ui left aligned middle aligned segment">
  <h2 class="ui header" style="margin-top: 2em; text-allign: center;">Cat Adoption Centre Dashboard</h2>

  {{#unless catBreeds}}
    <h3 class="ui message">
      No cats are home! Please check back later.
    </h3>
  {{/unless}}

  {{#each catBreeds}}
    <section class="ui left aligned middle aligned segment" style="margin-top: 2em;">
        <h3 class="ui header">{{name}}</h3>

      <div class="ui grid">
        
        <div class="four wide column">
          <strong>Age:</strong> {{age}}<br>
          <strong>Lifespan:</strong> {{lifespan}}<br>
          <strong>Size:</strong> {{size}}<br>
          <strong>Weight:</strong> {{weight}}
        </div>

        <div class="four wide column" style="padding: 1.5em;">
          <strong>Colours:</strong><br>
          {{#each colour}}
            <span class="ui label">{{this}}</span>
          {{/each}}

          <br><br>
          <strong>Personality:</strong><br>
          {{#each personality}}
            <span class="ui label">{{this}}</span>
          {{/each}}
        </div>

        <div class="four wide column">
          <div class="value">
            <a href="/breed/{{id}}">
              <button class="ui primary button" style="margin-bottom: 10px;">Learn More</button>
            </a>

            <div class="image" style="width: 240px; height: 240px; overflow: hidden; display: flex; justify-content: center; align-items: center;">
              <img src="{{image}}" style="width: 100%; height: 100%; object-fit: cover;">
            </div>
          </div>
        </div>
      </div>
    </section>
  {{/each}}
</section>
