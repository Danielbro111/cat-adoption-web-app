<form class="ui stacked segment form" action="/catdisplay/{{id}}/addcat" method="POST">
  <div class="four fields">
    <div class="field">
      <label>Name</label>
      <input type="text" name="name" autofocus required title = "Please include a valid Name"
	  placeholder="Name">
    </div>
    <div class="field">
      <label>Age</label>
      <input type="text" name="age" required title = "Please include a valid Age"
	  placeholder="Age"  >
    </div>
        <div class="field">
      <label>Colour</label>
      <input type="text" name="colour" required title = "Please include a valid Colour"
	  placeholder="Colour"  >
    </div>
        <div class="field">
      <label>Weight</label>
      <input type="text" name="weight" required title = "Please include a valid Weight"
	  placeholder="Weight"  >
    </div>
  </div>
  <button class="ui blue submit button">Add Cat</button>
</form>
