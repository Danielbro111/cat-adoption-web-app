<section class="ui center aligned segment" style="padding: 3em 2em; background-color: #e6f7ff; border-radius: 20px;">

  <h1 class="ui huge header" style="color: #ff6f91; font-family: 'Quicksand', sans-serif; letter-spacing: 1px;">
    🐾 Your Cat Adoption Dashboard
  </h1>

  {{#unless catBreeds}}
    <div class="ui icon message" style="background: #e0f2f1; color: #004d40; border: 2px dashed #26a69a; border-radius: 12px;">
      <i class="cat icon" style="color: #26a69a;"></i>
      <div class="content">
        <div class="header">No cats are home! 😿</div>
        <p>You haven’t adopted any kitties yet. Time to find your purr-fect companion!</p>
      </div>
    </div>
  {{/unless}}

  {{#each catBreeds}}
    <section class="ui segment" style="margin-top: 2em; background: #ffffff; border-radius: 18px; box-shadow: 0 6px 14px rgba(0, 0, 0, 0.05); padding: 1.5em 2em;">
      
      <h3 class="ui header" style="font-size: 1.6em; color: #9c88ff; font-weight: 600; margin-bottom: 1em;">
        🐱 {{breed}}
      </h3>

      <div class="ui stackable grid" style="align-items: center;">

        <!-- Text Info -->
        <div class="seven wide column" style="text-align: left; color: #444; padding-right: 1.5em;">
          <div style="line-height: 1.6;">
            <p><strong>Name:</strong> {{name}}</p>
            <p><strong>Age:</strong> {{age}}</p>
            <p><strong>Lifespan:</strong> {{lifespan}}</p>
            <p><strong>Size:</strong> {{size}}</p>
            <p><strong>Weight:</strong> {{weight}}</p>
            <p><strong>Colour:</strong> {{colour}}</p>
            <p><strong>Personality:</strong> {{personality}}</p>
          </div>
        </div>

        <!-- Image & Actions -->
        <div class="nine wide column" style="display: flex; flex-direction: column; align-items: center; gap: 1.5em;">

          <div class="image" style="width: 220px; height: 220px; overflow: hidden; border-radius: 12px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
            <img src="{{picture}}" style="width: 100%; height: 100%; object-fit: cover;">
          </div>

          <div class="ui buttons">
            <a href="/catdisplay/{{id}}">
              <button class="ui pink button" style="background: #ffb6c1; margin-right: 1em;">
                Click here to see more of this breed! 
              </button>
            </a>
            <a href="/dashboard/deletecatbreed/{{id}}">
              <button class="ui icon button" style="background: #ffe6e6;">
                <i class="trash alternate outline icon" style="color: #e57373;"></i>
              </button>
            </a>
          </div>
        </div>

      </div>
    </section>
  {{/each}}
</section>

