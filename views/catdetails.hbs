{{> menu}}

{{#unless catBreeds}}
  <h3 class="ui message">No cat breeds available</h3>
{{/unless}}

  <section class="ui center aligned segment" style="margin-top: 2em;">
  <h1>
    <strong>The rest of our furry friends!</strong>
  </h1>
    
  <div class="ui stackable cards">
    {{#each catBreeds.cats}}
      <div class="ui card">
        <div class="content">
          <h3>{{breed}}</h3>
          {{#each cats}}
            <div class="ui card">
              <div class="content">
                <div class="header">{{name}}</div>
                <div class="meta">{{age}} old</div>
                <div class="description">
                  <p><strong>Lifespan:</strong> {{lifespan}}</p>
                  <p><strong>Size:</strong> {{size}}</p>
                  <p><strong>Weight:</strong> {{weight}}</p>
                  <p><strong>Colours:</strong> 
                    {{#each colour}}
                      {{this}}
                    {{/each}}
                  </p>
                  <p><strong>Personality:</strong> 
                    {{#each personality}}
                      {{this}}
                    {{/each}}
                  </p>
                  <p><strong>Fun Fact:</strong> {{funFact}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/each}}
  </div>
</section>
